.topImage{
  width: 100%;
  height: 600rpx;
}
.wrap{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 750rpx;
  background-color: white;
  box-sizing: border-box;
}
swiper{
  height: 600rpx;
  width: 100%;
}
.wrap .dec{
  flex: 8;
}

.wrap .price{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  flex: 2;
  margin-right: 10rpx;
}
.detail_info{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  font-size: 30rpx;
}
.detail_info text:last-child{
  font-weight: 600;
  font-size: 40rpx;
  color: rgb(229, 21, 21);
  margin-top: 10rpx;
}
.middle{
  margin: 20rpx 0;
  height: 90rpx;
  background-color: white;
  padding-left: 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 90rpx;
}
.middle text:nth-child(2){
  margin-right: 20rpx;
}
.dot{ 
  height: 25rpx;
  width: 25rpx;
  background-color: red;
  color: white;
  padding: 10rpx;
  border-radius: 50%;
  font-weight: 600;
}
.detail_info_image{
  width: 100%;
}